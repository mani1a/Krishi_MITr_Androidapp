<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true">
    <TextView
        android:id="@+id/setTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"/>

    <RelativeLayout
        android:layout_below="@+id/setTime"
        android:id="@+id/txtLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/backgroung_send_msg"
        android:padding="10dp"
        android:gravity="start">



        <TextView
            android:id="@+id/txtsendmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send Message"
            android:textColor="#006504"
            android:textSize="18sp" />



    </RelativeLayout>

    <ImageView
        android:layout_below="@+id/txtLayout"
        android:id="@+id/imgsendmsg"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/backgroung_send_msg"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/sendaudiolayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgsendmsg"
        android:layout_alignParentEnd="true"
        android:visibility="gone">


    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#9CE582"
        android:layout_width="250dp"
        android:layout_height="50dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/vector_play"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"

            />


            <ImageButton
                android:id="@+id/pause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/vector_pause"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/audiomsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUDIO MESSAGE"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"
                android:textSize="16sp"/>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>




